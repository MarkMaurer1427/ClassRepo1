@model HomeDetailsViewModel

@{
    ViewBag.Title = "Details Page";
}



<div class="row justify-content-center m-3"
    <div class= "colcol-sm-8">
        <div class="card h-50 w-50">
            <div class="card-header">
                @Model.book.Title
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src = "~/images/book_img.png">
                <h4>Book ID: @Model.book.BookId</h4>
                <h4>Author: @Model.book.Author</h4>
                <h4>Category: @Model.book.LanguageId</h4>
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-primary" href="~/home/">Back</a>
                <a class="btn btn-primary" asp-controller="home" asp-action="edit" asp-route-id="@Model.book.BookId">Edit</a>
                <a class="btn btn-danger" asp-controller="home" asp-action="delete" asp-route-id="@Model.book.BookId">Delete</a>
            </div>
        </div>
    </div>
</div>


