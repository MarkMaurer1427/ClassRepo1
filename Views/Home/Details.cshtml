@model HomeDetailsViewModel

@{
    ViewBag.Title = "Details Page";
}


    This is Details.cshtml view.


<div class="row justify-content-center m-3"
    <div class= "colcol-sm-8">
        <div class="card">
            <div class="card-header">
                @Model.book.Title
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src = "~/images/book_img.jpg">
                <h4>Book ID: @Model.book.Id</h4>
                <h4>Author: @Model.book.Author</h4>
                <h4>Category: @Model.book.Language</h4>
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-primary" href="~/home/">Back</a>
                <a class="btn btn-primary" href="#">Edit</a>
                <a class="btn btn-danger" href="#">Delete</a>
            </div>
        </div>
    </div>
</div>


